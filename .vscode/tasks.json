{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Quartz Build to Apache2",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "npx quartz build --directory Siebenlande --output /var/www/html && cp .htaccess /var/www/html/.htaccess"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Build Quartz site and output to Apache2 directory (/var/www/html)"
        }
    ]
}